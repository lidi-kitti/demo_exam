<Page x:Class="Proga.СтраницыПользователя.РедактированиеОписания"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Proga.СтраницыПользователя"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="РедактированиеОписания">

    <Grid Background="Gray">
        <StackPanel Margin="50,50,151,49.6" >
            <StackPanel Height="343"   HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="100,0,10.2,0">

                <Label Content="Редактирование описания" HorizontalAlignment="Center" />



                <StackPanel Orientation="Horizontal" Margin="0 40 0 0 ">
                    <Label Content="Описание проблемы"  HorizontalAlignment="Center"  Width="151"/>
                    <TextBox x:Name="Problem_tb" Text="{Binding Описание_проблемы}" Height="80" TextWrapping="Wrap" Width="245"/>
                </StackPanel>

                <StackPanel  Height="50" >
                    <Button x:Name="SaveButton" Click="SaveButton_Click" Content="Сохранить" Width="70"  Margin="20" Background="Yellow"/>
                </StackPanel>

            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
