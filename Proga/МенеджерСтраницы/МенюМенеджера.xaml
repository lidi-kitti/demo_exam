<Page x:Class="Proga.МенеджерСтраницы.МенюМенеджера"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Proga.МенеджерСтраницы"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="МенюМенеджера"  Background="Gray">

    <Grid>
        <StackPanel>
            <StackPanel Background="Gray" Orientation="Vertical" Height="414" >

                <StackPanel  Background="Gray"  Height="50" Orientation="Horizontal" HorizontalAlignment="Center">

                    <Button x:Name="Emp_Btn" Click="Emp_Btn_Click" Content="Статистика" Width="148" Height="30" Margin="10 0 0 0" Background="Yellow"/>
                    <Button x:Name="Ord_Btn" Content="Заявки" Click="Ord_Btn_Click" Width="148" Height="30" Background="Yellow"/>
                    <Button x:Name="New_Rabotnik" Content="Сотрудники" Click="Ord_Btn_Click" Width="148" Height="30" Background="Yellow"/>

                </StackPanel>
                <StackPanel Height="384" Margin="0,0,-37,0">

                    <Frame x:Name="ManagerFrame"  />

                </StackPanel>

            </StackPanel>



        </StackPanel>
    </Grid>
</Page>
